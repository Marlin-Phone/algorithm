#include <bits/stdc++.h>
using namespace std;
/**
 * @nc app=nowcoder id=abc3fe2ce8e146608e868a70efebf62e topic=295 question=23256
 * lang=C++ 2025-09-01 18:01:32
 * https://www.nowcoder.com/practice/abc3fe2ce8e146608e868a70efebf62e?tpId=295&tqId=23256
 * [BM18] 二维数组中的查找
 */

/** @nc code=start */

class Solution {
  public:
    /**
     * 代码中的类名、方法名、参数名已经指定，请勿修改，直接返回方法规定的值即可
     *
     *
     * @param target int整型
     * @param array int整型vector<vector<>>
     * @return bool布尔型
     */
    bool Find(int target, vector<vector<int>> &array) {
        if (array.empty() || array[0].empty()) {
            return false;
        }
        int rows = array.size();
        int cols = array[0].size();
        int i = 0, j = cols - 1;
        while (i < rows && j >= 0) {
            if (array[i][j] == target) {
                return true;
            } else if (array[i][j] > target) {
                j--;
            } else {
                i++;
            }
        }
        return false;
    }
};

/** @nc code=end */
