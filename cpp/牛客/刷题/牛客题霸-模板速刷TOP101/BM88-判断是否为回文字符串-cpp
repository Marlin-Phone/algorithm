#include <bits/stdc++.h>
using namespace std;
/**
 * @nc app=nowcoder id=e297fdd8e9f543059b0b5f05f3a7f3b2 topic=295
 * question=1089616 lang=C++ 2025-09-03 23:09:32
 * https://www.nowcoder.com/practice/e297fdd8e9f543059b0b5f05f3a7f3b2?tpId=295&tqId=1089616
 * [BM88] 判断是否为回文字符串
 */

/** @nc code=start */

class Solution {
  public:
    /**
     * 代码中的类名、方法名、参数名已经指定，请勿修改，直接返回方法规定的值即可
     *
     *
     * @param str string字符串 待判断的字符串
     * @return bool布尔型
     */
    bool judge(string str) {
        int n = str.size();
        int i = 0, j = n - 1;
        while (i < j) {
            if (str[i] != str[j]) {
                return false;
            }
            i++;
            j--;
        }
        return true;
    }
};

/** @nc code=end */
