#include <bits/stdc++.h>
using namespace std;
/**
 * @nc app=nowcoder id=e8a1b01a2df14cb2b228b30ee6a92163 topic=295 question=23271
 * lang=C++ 2025-08-21 00:09:44
 * https://www.nowcoder.com/practice/e8a1b01a2df14cb2b228b30ee6a92163?tpId=295&tqId=23271
 * [BM51] 数组中出现次数超过一半的数字
 */

/** @nc code=start */

class Solution {
  public:
    /**
     * 代码中的类名、方法名、参数名已经指定，请勿修改，直接返回方法规定的值即可
     *
     *
     * @param numbers int整型vector
     * @return int整型
     */
    int MoreThanHalfNum_Solution(vector<int> &numbers) {
        int ans = 0;
        map<int, int> mp;
        for (int i = 0; i < numbers.size(); i++) {
            mp[numbers[i]]++;
        }
        for (auto [num, cnt] : mp) {
            if (cnt > numbers.size() / 2)
                ans = num;
        }
        return ans;
    }
};

/** @nc code=end */
