 * https://www.nowcoder.com/practice/4c776177d2c04c2494f2555c9fcc1e49?tpId=295&tqId=23268
 * [BM43] 包含min函数的栈
 */

/** @nc code=start */

class Solution {
  public:
    stack<pair<int, int>> stk;
    void push(int value) {
        if (stk.size() == 0) {
            stk.push({value, value});
        } else {
            if (value <= stk.top().second) {
                stk.push({value, value});
            } else {
                stk.push({value, stk.top().second});
            }
        }
    }
    void pop() { stk.pop(); }
    int top() { return stk.top().first; }
    int min() { return stk.top().second; }
};

/** @nc code=end */
